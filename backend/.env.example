# ─── Database ────────────────────────────────────────────────────────────────
# Auto-provided by Railway PostgreSQL service
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ─── JWT ─────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-64-character-random-string-here
JWT_EXPIRES_IN=8h

# ─── Server ───────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ─── Google OAuth 2.0 ────────────────────────────────────────────────────────
# Get from Google Cloud Console → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# ─── Gmail SMTP ───────────────────────────────────────────────────────────────
# GMAIL_APP_PASSWORD: Generate at myaccount.google.com → Security → App Passwords
GMAIL_USER=you@gmail.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
FROM_EMAIL=Agency Name <you@gmail.com>

# ─── File Uploads (Railway Volume) ───────────────────────────────────────────
# Set to /app/uploads on Railway (matches Volume mount path)
UPLOADS_PATH=/app/uploads
UPLOADS_BASE_URL=https://your-backend-domain.railway.app

# ─── Seed Admin (used by db:seed script only) ─────────────────────────────────
SEED_ADMIN_EMAIL=admin@agency.com
SEED_ADMIN_PASSWORD=Admin@123456
SEED_ADMIN_NAME=Super Admin
